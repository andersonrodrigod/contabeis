<div class="auth-container">
    <div class="auth-acording">
        <h2>Registrar</h2>
        <form action="/register" method="post" class="container-acording">
            <div>
                <label for="name">Nome</label>
                <input type="text" name="name" placeholder="Digite seu nome" autocomplete="off">
            </div>
            <div>
                <label for="username">Usuário</label>
                <input type="text" name="username" placeholder="Digite o seu usuário" autocomplete="off">
            </div>
            <div>
                <label for="email">E-mail</label>
                <input type="email" name="email" placeholder="Digite o seu e-mail"   autocomplete="off">
            </div>
            <div>
                <label for="password">Senha</label>
                <input type="password" name="password" placeholder="Digite sua senha" autocomplete="off">
            </div>
            <div>
                <label for="confirmpassword">Confirmação de Senha</label>
                <input type="password" name="confirmpassword" placeholder="Comfirme a sua senha" autocomplete="off" >
            </div>
            <input type="submit" value="Cadastrar" class="btn-cadastrar">
            <p>Já tem conta? <a href="/login">Clique aqui</a></p>
        </form>
    </div>
</div>




